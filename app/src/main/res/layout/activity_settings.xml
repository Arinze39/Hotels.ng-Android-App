<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardview_light_background">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/backButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                app:srcCompat="@drawable/ic_chevron_left_black_24dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_margin="10dp"
                android:layout_toEndOf="@+id/backButton"
                android:layout_toRightOf="@+id/backButton"
                android:text="@string/settings"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:textColor="@color/white" />
        </RelativeLayout>

    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView27"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="24dp"
                android:text="@string/account"
                android:textSize="16sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginStart="20dp" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_email"
                app:layout_constraintLeft_toLeftOf="@+id/textView27"
                android:layout_marginTop="37dp"
                app:layout_constraintTop_toBottomOf="@+id/textView27" />

            <TextView
                android:id="@+id/textView31"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/mail"
                android:textAppearance="@android:style/TextAppearance.Material.Medium"
                android:textColor="@color/textDark"
                app:layout_constraintLeft_toRightOf="@+id/imageView2"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@+id/textView27"
                android:layout_marginStart="60dp" />

            <TextView
                android:id="@+id/textView39"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dummy_email"
                android:textAppearance="@android:style/TextAppearance.Material.Medium"
                android:textSize="15sp"
                android:layout_marginTop="5dp"
                app:layout_constraintTop_toBottomOf="@+id/textView31"
                app:layout_constraintLeft_toLeftOf="@+id/textView31" />

            <View
                android:id="@+id/view"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginTop="24dp"
                android:background="#1F000000"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView39" />

            <TextView
                android:id="@+id/textView40"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/notifications"
                android:layout_marginLeft="20dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@+id/view"
                android:layout_marginStart="20dp" />


            <TextView
                android:id="@+id/settings_notification_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/show_notifications"
                android:textAppearance="@android:style/TextAppearance.Material.Medium"
                android:textColor="@color/textDark"
                app:layout_constraintLeft_toRightOf="@+id/imageView11"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@+id/textView40"
                android:layout_marginStart="60dp" />

            <TextView
                android:id="@+id/textView41"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/show_notifications_when_locked"
                android:textSize="12sp"
                app:layout_constraintLeft_toLeftOf="@+id/settings_notification_label"
                android:layout_marginTop="5dp"
                app:layout_constraintTop_toBottomOf="@+id/settings_notification_label" />

            <ImageView
                android:id="@+id/imageView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_notifications"
                app:layout_constraintLeft_toLeftOf="@+id/textView40"
                android:layout_marginTop="32dp"
                app:layout_constraintTop_toBottomOf="@+id/textView40" />

            <CheckBox
                android:id="@+id/notifications_checkBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@drawable/check_box_selector"
                android:checked="true"
                android:layout_marginRight="24dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@+id/settings_notification_label"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="24dp" />

            <ImageView
                android:id="@+id/imageView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_sms"
                app:layout_constraintLeft_toLeftOf="@+id/imageView11"
                android:layout_marginTop="50dp"
                app:layout_constraintTop_toBottomOf="@+id/imageView11" />

            <TextView
                android:id="@+id/sms_notification_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sms_notifications"
                android:textAppearance="@android:style/TextAppearance.Material.Medium"
                android:textColor="@color/textDark"
                app:layout_constraintLeft_toLeftOf="@+id/textView41"
                android:layout_marginTop="32dp"
                app:layout_constraintTop_toBottomOf="@+id/textView41" />

            <TextView
                android:id="@+id/textView43"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/receive_sms_notifications"
                android:textSize="12sp"
                app:layout_constraintLeft_toLeftOf="@+id/sms_notification_label"
                android:layout_marginTop="5dp"
                app:layout_constraintTop_toBottomOf="@+id/sms_notification_label" />

            <CheckBox
                android:id="@+id/sms_notifications_checkBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@drawable/check_box_selector"
                android:checked="false"
                app:layout_constraintLeft_toLeftOf="@+id/notifications_checkBox"
                android:layout_marginTop="50dp"
                app:layout_constraintTop_toBottomOf="@+id/notifications_checkBox" />


            <View
                android:id="@+id/view2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:layout_marginTop="24dp"
                android:background="#1F000000"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView43" />

            <TextView
                android:id="@+id/textView42"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="@string/general"
                android:textSize="16sp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@+id/view2" />


            <TextView
                android:id="@+id/textView45"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/night_mode"
                android:textAppearance="@android:style/TextAppearance.Material.Medium"
                android:textColor="@color/textDark"
                android:layout_marginLeft="0dp"
                app:layout_constraintLeft_toLeftOf="@+id/textView43"
                android:layout_marginTop="32dp"
                app:layout_constraintTop_toBottomOf="@+id/textView42" />

            <Switch
                android:id="@+id/switch1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="24dp"
                android:layout_marginTop="-5dp"
                android:checked="false"
                android:theme="@style/switch_theme"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@+id/textView45" />
        </android.support.constraint.ConstraintLayout>

    </android.support.v4.widget.NestedScrollView>

</android.support.design.widget.CoordinatorLayout>
