<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="ng.hotels.android.app.ui.fragments.LoyaltyCoin">

    <!-- TODO: Update blank fragment layout -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#F4F4F4">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="238dp"
                android:background="#3D9EE3"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|fill_horizontal"
                    android:layout_marginBottom="8dp"
                    android:fontFamily="Lato"
                    android:gravity="center_horizontal"
                    android:text="@string/hotels_ng"
                    android:textColor="#FFFFFF"
                    android:textSize="25sp"
                    android:textStyle="bold" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profile_image"
                    android:layout_width="139dp"
                    android:layout_height="139dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="20dp"
                    android:src="@drawable/aeroplane"
                    app:civ_border_color="#FFFFFF"
                    app:civ_border_width="2dp" />

                <TextView
                    android:id="@+id/profile_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|fill_horizontal"
                    android:layout_marginBottom="8dp"
                    android:fontFamily="Lato"
                    android:gravity="center_horizontal"
                    android:text="@string/profile_name"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:textStyle="bold" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#F4F4F4">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|fill_horizontal"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="14dp"
                    android:fontFamily="Lato"
                    android:gravity="center_horizontal"
                    android:text="@string/title_name_loyalty"
                    android:textColor="#1879BE"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="2dp"
                    android:background="#66C4C4C4" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="163dp"
                    android:orientation="horizontal"
                    android:background="#F4F4F4">

                    <View
                        android:id="@+id/loyalty_wallet"
                        android:layout_width="190dp"
                        android:layout_height="163dp"
                        android:layout_marginLeft="8dp"
                        android:background="@drawable/aeroplane" />

                    <TextView
                        android:id="@+id/loyalty_balance"
                        android:layout_width="159dp"
                        android:layout_height="46dp"
                        android:layout_marginTop="40dp"
                        android:layout_marginLeft="15dp"
                        android:gravity="center_vertical|center_horizontal"
                        android:text="@string/loyalty_balance"
                        android:textStyle="bold"
                        android:fontFamily="lato"
                        android:textSize="20sp"/>
                </LinearLayout>

                <android.support.v7.widget.CardView
                    android:layout_width="338dp"
                    android:layout_height="116dp"
                    android:layout_marginLeft="23dp"
                    android:background="#F2F2F2"
                    app:cardCornerRadius="5dp"
                    android:elevation="5dp">

                    <LinearLayout
                        android:layout_width="338dp"
                        android:layout_height="60dp"
                        android:orientation="horizontal">

                        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                            android:id="@+id/lc_logo"
                            android:layout_width="31dp"
                            android:layout_height="31dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="8dp"
                            android:src="@drawable/aeroplane" />

                        <TextView
                            android:layout_width="89dp"
                            android:layout_height="29dp"
                            android:layout_marginLeft="20dp"
                            android:layout_gravity="center_vertical"
                            android:text="@string/gain"
                            android:fontFamily="Lato"
                            android:textColor="#000000"
                            android:textStyle="bold"
                            android:textSize="18sp"
                            />

                        <ImageView
                            android:id="@+id/vector_4"
                            android:layout_width="8dp"
                            android:layout_height="14dp"
                            android:layout_gravity="center_vertical"
                            app:srcCompat="@drawable/ic_arrow_back"
                            android:layout_marginLeft="300dp"/>

                    </LinearLayout>

                    <view
                        android:layout_width="338dp"
                        android:layout_height="2dp"
                        android:layout_marginLeft="23dp"
                        android:background="#66C4C4C4" />

                    <LinearLayout
                        android:layout_width="338dp"
                        android:layout_height="60dp"
                        android:orientation="horizontal">


                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="338dp"
                    android:layout_height="116dp"
                    android:layout_marginLeft="23dp"
                    android:layout_marginTop="25dp"
                    android:background="#F2F2F2"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="5dp">
                    <LinearLayout
                        android:layout_width="338dp"
                        android:layout_height="116dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/history"
                            android:layout_marginLeft="43dp"
                            android:layout_marginTop="22dp"
                            android:fontFamily="Lato"
                            android:textColor="#000000"
                            android:textStyle="bold"
                            android:textSize="18sp"
                            />
                        <view
                            android:layout_width="338dp"
                            android:layout_height="2dp"
                            android:layout_marginLeft="23dp"
                            android:background="#66C4C4C4" />

                        <LinearLayout
                            android:layout_width="338dp"
                            android:layout_height="60dp"
                            android:orientation="horizontal">

                        </LinearLayout>

                        <view
                            android:layout_width="338dp"
                            android:layout_height="2dp"
                            android:layout_marginLeft="23dp"
                            android:background="#66C4C4C4" />

                        <LinearLayout
                            android:layout_width="338dp"
                            android:layout_height="60dp"
                            android:orientation="horizontal">

                        </LinearLayout>

                        <view
                            android:layout_width="338dp"
                            android:layout_height="2dp"
                            android:layout_marginLeft="23dp"
                            android:background="#66C4C4C4" />

                        <LinearLayout
                            android:layout_width="338dp"
                            android:layout_height="60dp"
                            android:orientation="horizontal">

                        </LinearLayout>

                        <view
                            android:layout_width="338dp"
                            android:layout_height="2dp"
                            android:layout_marginLeft="23dp"
                            android:background="#66C4C4C4" />

                        <LinearLayout
                            android:layout_width="338dp"
                            android:layout_height="60dp"
                            android:orientation="horizontal">

                        </LinearLayout>

                        <view
                            android:layout_width="338dp"
                            android:layout_height="2dp"
                            android:layout_marginLeft="23dp"
                            android:background="#66C4C4C4" />
                    </LinearLayout>


                </android.support.v7.widget.CardView>

            </LinearLayout>


        </LinearLayout>


    </ScrollView>

    <LinearLayout
        android:layout_width="338dp"
        android:layout_height="60dp"
        android:orientation="horizontal">

    </LinearLayout>

</FrameLayout>
